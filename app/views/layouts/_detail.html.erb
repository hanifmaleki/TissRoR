<header>
  <div class="container-fluid p-3 mb-2 bg-primary text-white navbar-fixed-top navbar2">
    <div class="row vertical-align">
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <%= link_to "<h4><span class=\"glyphicon glyphicon-hand-left\"></span></h4>".html_safe, :back, style: 'color: white' %>
      </div>
      <div class="col-xs-5 col-sm-7 col-md-7 col-lg-7">
        <h4><%= yield(:type).to_s.capitalize %> Detail</h4>
      </div>
      <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" style="padding-top:5px;">
        <% if yield(:isFavourite) == "true" %>
          <%= link_to "#{image_tag("add.png", size:"36x36")}".html_safe,
                      {:controller => 'favourite', :action => "add", :type => yield(:type),
                       :id => yield(:id), :item_title => @hash[:title]},style: 'color: white' %>
        <% else %>
          <%= link_to "#{image_tag("add.png", size:"36x36")}".html_safe,
                      {:controller => 'favourite', :action => "remove", :type => yield(:type),
                       :id => yield(:id), :item_title => @hash[:title]},style: 'color: white'%>
        <% end %>
      </div>
    </div>
  </div>
</header>
