<%provide :title, "Search Results"%>
<%=render 'layouts/simple_second_nav'%>
<div class="container"  style=" margin-top:48px;">
<%puts yield(:favourite)%>
<%if yield(:favourite)==""%>
  <h5>Keyword is <%= yield(:keyword) %></h5>
<%else%>
  <h5>Favourite <%=yield(:favourite)%></h5>
<%end%>
</div>

<div class="container">
<% if @list && @list.length > 0 %>
  <table class="table table-condensed table-hover table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <!--th>Gender</th-->
      <th>Details</th>
      <!--th>Favorites</th-->
    </tr>
    </thead>
    <tbody>
    <% @list.each do |item| %>
      <tr>
        <td><%= item[:title] %></td>
        <td><%= link_to "Details", {:controller => @controller, :action => "detail", :id => item[:id]} %></td>
      </tr>
    <% end %>
    </tbody>
<% else %>
  There is no item match with the search expression
<% end %>
</table>
</div>

<div class="container-fluid p-3 mb-2 bg-primary text-white navbar-fixed-bottom">
  <ul class="pagination">
    <li><a href="#">«</a></li>
    <li><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li class="disabled"><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#">5</a></li>
    <li class="active"><a href="#">6</a></li>
    <li><a href="#">»</a></li>
  </ul>
</div>
