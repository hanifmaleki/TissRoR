<%provide :title, "Search Results"%>
<%=render 'layouts/simple_second_nav'%>
<div class="container"  style=" margin-top:48px;">
<%puts yield(:favourite)%>
<%if yield(:favourite)==""%>
    <h4>Keyword is <b><%= yield(:keyword)%></b></h4>
<%else%>
  <h5>Favourite <%=yield(:favourite)%></h5>
<%end%>
</div>

<div class="container">
<% if @list && @list.length > 0 %>
  <table class="table table-condensed table-hover table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <!--th>Gender</th-->
      <th>Details</th>
      <!--th>Favorites</th-->
    </tr>
    </thead>
    <tbody>
    <% @list.each do |item| %>
      <tr>
        <td><%= item[:title] %></td>
        <td><%= link_to "Details", {:controller => @controller, :action => "detail", :id => item[:id]} %></td>
      </tr>
    <% end %>

    </tbody>
<% else %>
  There is no item match with the search expression
<% end %>
</table>
  <%= will_paginate  @list%>
</div>

