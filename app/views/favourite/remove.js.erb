$(document).ajaxSuccess(function(data) {
    var id = <%= "\"#fav-#{@id}\"".html_safe %> + "" ;
    //alert("<!--%="#{@isFavourite.to_s}".html_safe%-->")
    <%if @isFavourite.nil? or @isFavourite==false %>
      var myVar = "<%= escape_javascript("#{link_to image_tag("add2.png", size:"36x36"),
                        {:controller => 'favourite', :action => "add", :type => @type,
                         :id => @id, :title => @title}, :remote =>true}".html_safe)%>";

      $(id).html(myVar);
    <% else %>
      $(id).remove();
    <% end %>
});
